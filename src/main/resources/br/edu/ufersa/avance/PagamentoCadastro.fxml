<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #f6f1de;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ufersa.avance.controller.PagamentoController">

    <!-- Painel esquerdo com formulário -->
    <left>
        <VBox alignment="TOP_LEFT" prefHeight="500.0" prefWidth="300" spacing="15" style="-fx-background-color: #7d0f7c;">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>
         <HBox layoutX="40.0" layoutY="248.0" spacing="10">
            <children>
               <Button onAction="#voltarDashboard" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Voltar" />
            </children>
         </HBox>

            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Cadastro de Pagamento" />
         <TextField fx:id="alunoCpfField" promptText="Cpf do Aluno" />

            <TextField fx:id="mesRefField" promptText="Mês de referência (ex: 07/2025)" />
         <ComboBox fx:id="statusField" prefHeight="26.0" prefWidth="290.0" promptText="Status" style="-fx-opacity: 1; -fx-background-color: #f4f4f4;" />
         <DatePicker fx:id="dataValidadeField" layoutX="40.0" layoutY="206.0" prefHeight="26.0" prefWidth="249.0" promptText="Data de Validade" />

            <HBox spacing="10">
                <Button fx:id="botaoCadastro" onAction="#cadastrarPagamento" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Cadastrar" />
            </HBox>
         <Label fx:id="erroCadastro" prefHeight="377.0" prefWidth="453.0" text="ErroCadastro" visible="false" />
        </VBox>
    </left>

    <!-- Painel direito com busca, tabela, editar e deletar -->
    <right>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <!-- Campo de consulta + botão editar -->
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="consultaField" prefHeight="26.0" prefWidth="400.0" promptText="Buscar pagamento..." style="-fx-background-color: white;" />
                <Button onAction="#editarPagamento" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Editar" />
            </HBox>

            <!-- Tabela de pagamentos -->
            <TableView fx:id="pagamentoTable" prefHeight="292" prefWidth="277" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colAluno" prefWidth="120" text="Aluno" />
                    <TableColumn fx:id="colMesRef" prefWidth="110" text="Mês de Referência" />
                    <TableColumn fx:id="colDataPagamento" prefWidth="132.79998779296875" text="Data do Pagamento" />
               <TableColumn fx:id="colDataValidade" prefWidth="125.5999755859375" text="Data de Validade" />
                    <TableColumn fx:id="colStatus" prefWidth="80" text="Status" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>

            <!-- Botão deletar -->
            <Button maxWidth="Infinity" onAction="#excluirPagamento" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Excluir" />
         <Label fx:id="erroTabela" prefHeight="18.0" prefWidth="730.0" text="ErroTabela" visible="false" />
        </VBox>
    </right>

</BorderPane>
