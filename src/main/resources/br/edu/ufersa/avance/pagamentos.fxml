<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400" prefWidth="666" style="-fx-background-color: #f6f1de;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seuprojeto.PagamentoController">

    <!-- Painel esquerdo com formulário -->
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="300" spacing="15" style="-fx-background-color: #7d0f7c;">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Cadastro de Pagamento" />
         <TextField fx:id="mesRefField1" promptText="Pagamento Referente" />

            <TextField fx:id="mesRefField" promptText="Mês de referência (ex: 07/2025)" />
            <TextField fx:id="statusField" promptText="Status (ex: Pago, Pendente)" />
            <DatePicker fx:id="dataPagamentoField" promptText="Data do pagamento" />

            <HBox spacing="10">
                <Button onAction="#cadastrar" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Cadastrar" />
            </HBox>
        </VBox>
    </left>

    <!-- Painel direito com busca, tabela, editar e deletar -->
    <right>
        <VBox alignment="CENTER" prefHeight="400" prefWidth="453.0" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <!-- Campo de consulta + botão editar -->
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="consultaField" promptText="Buscar pagamento..." style="-fx-background-color: white;" />
                <Button onAction="#editar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Editar" />
            </HBox>

            <!-- Tabela de pagamentos -->
            <TableView fx:id="pagamentoTable" prefHeight="292" prefWidth="277" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colFormaPagamento" prefWidth="120" text="Pagamento Referente" />
                    <TableColumn fx:id="colStatus" prefWidth="80" text="Status" />
                    <TableColumn fx:id="colMesRef" prefWidth="110" text="Mês Referência" />
                    <TableColumn fx:id="colDataPagamento" prefWidth="100" text="Data Pagamento" />
                </columns>
            </TableView>

            <!-- Botão deletar -->
            <Button maxWidth="Infinity" onAction="#deletar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Deletar" />
        </VBox>
    </right>

</BorderPane>
