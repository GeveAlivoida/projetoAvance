<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400" prefWidth="666" style="-fx-background-color: #f6f1de;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seuprojeto.AulaController">

    <!-- Painel esquerdo com formulário -->
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="300" spacing="15" style="-fx-background-color: #7d0f7c;">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Cadastro de Aula" />

            <DatePicker fx:id="dataAulaField" promptText="Data da aula" />
            <TextField fx:id="horarioField" promptText="Horário (ex: 14:00)" />
            <TextField fx:id="localField" promptText="Local" />
            <TextField fx:id="statusField" promptText="Status (ex: Agendada)" />
            <TextField fx:id="modalidadeField" promptText="Modalidade" />

            <HBox spacing="10">
                <Button onAction="#cadastrar" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Cadastrar" />
            </HBox>
        </VBox>
    </left>

    <!-- Painel direito com campo de busca, tabela e botão -->
    <right>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="405.0" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <!-- Linha com campo de busca e botão Editar -->
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="consultaField" promptText="Buscar" style="-fx-background-color: white;" />
                <Button onAction="#editar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Editar" />
            </HBox>

            <!-- Tabela de Aulas -->
            <TableView fx:id="aulaTable" prefHeight="250.0" prefWidth="290.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colData" prefWidth="50.0" text="Data" />
                    <TableColumn fx:id="colHorario" prefWidth="48.0" text="Horário" />
                    <TableColumn fx:id="colLocal" text="Local" />
                    <TableColumn fx:id="colStatus" prefWidth="87.0" text="Status" />
                </columns>
            </TableView>

            <!-- Botão Deletar -->
            <Button maxWidth="Infinity" onAction="#deletar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Deletar" />
        </VBox>
    </right>

</BorderPane>
