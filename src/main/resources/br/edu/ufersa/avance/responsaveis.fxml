<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400" prefWidth="666" style="-fx-background-color: #f6f1de;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seuprojeto.ResponsavelController">

    <!-- Painel esquerdo com formulário -->
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="300" spacing="15" style="-fx-background-color: #7d0f7c;">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Cadastro de Responsável" />

            <TextField fx:id="nomeField" promptText="Nome" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="telefoneField" promptText="Telefone" />
            <TextField fx:id="cpfField" promptText="CPF" />
            <DatePicker fx:id="nascimentoField" promptText="Data de Nascimento" />

            <HBox spacing="10">
                <Button onAction="#cadastrar" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Cadastrar" />
            </HBox>
        </VBox>
    </left>

    <!-- Painel direito com busca, tabela, editar e deletar -->
    <right>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="486.0" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <!-- Campo de consulta + botão editar -->
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="consultaField" promptText="Buscar responsável..." style="-fx-background-color: white;" />
                <Button onAction="#editar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Editar" />
            </HBox>

            <!-- Tabela de responsáveis -->
            <TableView fx:id="responsavelTable" prefHeight="292.0" prefWidth="277.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNome" prefWidth="100" text="Nome" />
                    <TableColumn fx:id="colEmail" prefWidth="90" text="Email" />
                    <TableColumn fx:id="colTelefone" prefWidth="90" text="Telefone" />
                    <TableColumn fx:id="colCpf" prefWidth="90" text="CPF" />
                    <TableColumn fx:id="colNascimento" prefWidth="100" text="Nascimento" />
                </columns>
            </TableView>

            <!-- Botão deletar -->
            <Button maxWidth="Infinity" onAction="#deletar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Deletar" />
        </VBox>
    </right>

</BorderPane>
