<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="502.0" prefWidth="1000.0" style="-fx-background-color: #f6f1de;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ufersa.avance.controller.ModalidadeController">

    <!-- Painel esquerdo com formulário -->
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="300" spacing="15" style="-fx-background-color: #7d0f7c;">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Cadastro de Modalidade" />

            <TextField fx:id="nomeField" promptText="Nome" />
         <TextField fx:id="professorField" promptText="Nome do Professor" />
         <ComboBox fx:id="tipoField" prefHeight="26.0" prefWidth="268.0" promptText="Escolha o tipo da modalidade" />
            <TextField fx:id="valorField" promptText="Valor (R$)" />
         <TextField fx:id="vagasField" promptText="Vagas" />

            <HBox spacing="10">
                <Button fx:id="botaoCadastro" onAction="#cadastrarModalidade" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Cadastrar" />
            </HBox>
         <Label fx:id="erroCadastro" text="Label" visible="false" />
        </VBox>
    </left>

    <!-- Painel direito com consulta, tabela e botão editar -->
    <right>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="700.0" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <!-- Campo de consulta + botão editar -->
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="consultaField" prefHeight="26.0" prefWidth="400.0" promptText="Buscar modalidade..." style="-fx-background-color: white;" />
                <Button onAction="#editarModalidade" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Editar" />
            </HBox>

            <!-- Tabela de modalidades -->
            <TableView fx:id="modalidadeTable" prefHeight="292.0" prefWidth="277.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNome" prefWidth="84.79998779296875" text="Nome" />
               <TableColumn fx:id="colProfessor" prefWidth="89.59994506835938" text="Professor" />
                    <TableColumn fx:id="colTipo" prefWidth="52.0" text="Tipo" />
                    <TableColumn fx:id="colValor" minWidth="0.0" prefWidth="47.2000732421875" text="Valor" />
               <TableColumn fx:id="colVagas" prefWidth="50.4000244140625" text="Vagas" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>

            <!-- Botão deletar -->
            <Button maxWidth="Infinity" onAction="#excluirModalidade" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Excluir" />
         <Label fx:id="erroTabela" text="Label" visible="false" />
        </VBox>
    </right>

</BorderPane>
