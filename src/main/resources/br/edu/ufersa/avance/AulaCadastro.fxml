<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #f6f1de;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ufersa.avance.projetoavance.controller.AulaController">

    <!-- Painel esquerdo com formulário -->
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="300" spacing="15" style="-fx-background-color: #7d0f7c;">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>
         <HBox layoutX="40.0" layoutY="421.0" spacing="10">
            <children>
               <Button onAction="#voltarDashboard" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Voltar" />
            </children>
         </HBox>

            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Cadastro de Aula" />

            <DatePicker fx:id="dataField" prefHeight="26.0" prefWidth="260.0" promptText="Data da aula" />
            <TextField fx:id="horarioField" promptText="Horário (ex: 14:00)" />
         <ComboBox fx:id="statusField" prefHeight="26.0" prefWidth="298.0" promptText="Status" />
         <ComboBox fx:id="modalidadeField" prefHeight="26.0" prefWidth="279.0" promptText="Modalidade" />
         <TextField fx:id="professorNomeField" promptText="Nome do Professor" />
         <TextArea fx:id="alunosNomeField" prefHeight="200.0" prefWidth="200.0" promptText="Nomes dos Alunos" />

            <HBox spacing="10">
                <Button fx:id="botaoCadastro" onAction="#cadastrarAula" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Cadastrar" />
            </HBox>
         <Label fx:id="erroCadastro" alignment="CENTER" prefHeight="170.0" prefWidth="606.0" text="ErroCadastro" visible="false" wrapText="true" />
        </VBox>
    </left>

    <!-- Painel direito com campo de busca, tabela e botão -->
    <right>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <!-- Linha com campo de busca e botão Editar -->
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="consultaField" prefHeight="26.0" prefWidth="400.0" promptText="Buscar" style="-fx-background-color: white;" />
                <Button onAction="#editarAula" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Editar" />
            <Button layoutX="500.0" layoutY="10.0" onAction="#imprimirPDF" style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-weight: bold;" text="Imprimir PDF" />
            </HBox>

            <!-- Tabela de Aulas -->
            <TableView fx:id="aulaTable" prefHeight="250.0" prefWidth="290.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colData" prefWidth="66.39996337890625" text="Data" />
                    <TableColumn fx:id="colHorario" prefWidth="55.20001220703125" text="Horário" />
                    <TableColumn fx:id="colStatus" prefWidth="84.00003051757812" text="Status" />
               <TableColumn fx:id="colModalidade" prefWidth="99.20001220703125" text="Modalidade" />
               <TableColumn fx:id="colProfessor" prefWidth="116.79998779296875" text="Professor" />
               <TableColumn fx:id="colAlunos" prefWidth="187.99993896484375" text="Alunos" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>

            <!-- Botão Deletar -->
            <Button maxWidth="Infinity" onAction="#excluirAula" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Excluir" />
         <Label fx:id="erroTabela" prefHeight="18.0" prefWidth="704.0" text="ErroTabela" visible="false" />
        </VBox>
    </right>

</BorderPane>
