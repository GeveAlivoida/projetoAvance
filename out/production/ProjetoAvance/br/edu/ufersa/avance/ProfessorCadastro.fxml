<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #f6f1de;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ufersa.avance.projetoAvance.controller.ProfessorController">

    <!-- Painel esquerdo com formulário -->
    <left>
        <VBox alignment="TOP_LEFT" prefHeight="600.0" prefWidth="300" spacing="15" style="-fx-background-color: #7d0f7c;">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>
         <HBox layoutX="40.0" layoutY="410.0" spacing="10">
            <children>
               <Button onAction="#voltarDashboard" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Voltar" />
            </children>
         </HBox>

            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Cadastro de Professor" />

            <TextField fx:id="nomeField" promptText="Nome" />
            <TextField fx:id="cpfField" promptText="CPF" />
         <DatePicker fx:id="nascimentoField" prefHeight="26.0" prefWidth="318.0" promptText="Data de Nascimento" />
            <TextField fx:id="telefoneField" promptText="Telefone" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="especialidadeField" promptText="Especialidade" />
         <TextField fx:id="salarioField" promptText="Salário" />
            <TextField fx:id="contaBancoField" promptText="Conta Bancária" />
         <ComboBox fx:id="statusField" prefHeight="26.0" prefWidth="296.0" promptText="Status do Professor" style="-fx-opacity: 1; -fx-background-color: #f4f4f4;" />
            <HBox spacing="10">
                <Button fx:id="botaoCadastro" onAction="#cadastrarProfessor" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Cadastrar" />
            </HBox>
         <Label fx:id="erroCadastro" prefHeight="65.0" prefWidth="322.0" text="ErroCadastro" visible="false" wrapText="true" />
        </VBox>
    </left>

    <!-- Painel direito com busca, tabela, editar e deletar -->
    <right>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="700.0" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <!-- Campo de consulta + botão editar -->
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="consultaField" prefHeight="26.0" prefWidth="400.0" promptText="Buscar professor..." style="-fx-background-color: white;" />
                <Button onAction="#editarProfessor" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Editar" />
            <Button layoutX="500.0" layoutY="10.0" onAction="#imprimirPDF" style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-weight: bold;" text="Imprimir PDF" />
            </HBox>

            <!-- Tabela de professores -->
            <TableView fx:id="professorTable" prefHeight="270.0" prefWidth="834.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNome" prefWidth="100.79998779296875" text="Nome" />
               <TableColumn fx:id="colCpf" prefWidth="62.39996337890625" text="CPF" />
                    <TableColumn fx:id="colEmail" prefWidth="109.60003662109375" text="Email" />
                    <TableColumn fx:id="colTelefone" prefWidth="72.0" text="Telefone" />
                    <TableColumn fx:id="colEspecialidade" prefWidth="86.39990234375" text="Especialidade" />
               <TableColumn fx:id="colSalario" prefWidth="52.00006103515625" text="Salário" />
               <TableColumn fx:id="colConta" prefWidth="92.0001220703125" text="Conta Bancária" />
                    <TableColumn fx:id="colStatus" prefWidth="52.7999267578125" text="Status" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>

            <!-- Botão deletar -->
            <Button maxWidth="Infinity" onAction="#excluirProfessor" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Excluir" />
         <Label fx:id="erroTabela" prefHeight="18.0" prefWidth="765.0" text="ErroTabela" visible="false" />
        </VBox>
    </right>

</BorderPane>
